<script >
export default {
  data() {
    return {
      code: false,
      books: {},
      name: null,
      clean: true,
      bookList: true,
      // skus : [],
      stockoutBook:[],
      noStockoutBook:[],
    };
  },
  methods: {
    async getIsbn() {
      if (this.name.trim().length === 0) {
        return;
      }
      console.info(this.name);
      this.stockoutBook = [],
      this.noStockoutBook = []
      let data = await this.$http.get("/book?name=" + this.name)
      console.info(data.code);
      if (data.code === 0) {
        this.bookList = false;
        this.books = data.data.list;
        console.info("获取折扣：",this.books.discount)
        console.info("this.books:",this.books)
        //过滤缺货列表
        let total = 0;
        for(var i=0;i<this.books.length;i++){  
          
          // for(var z=0;z<this.books[i].skus.length;z++){
          //   total += this.books[i].skus[z].stock; 
          // }
        total += this.books[i].stock;

          // console.info(total);
          if(total <= 0){
            console.info("总库存 <= 0",total)
            this.stockoutBook.push(this.books[i]);
            console.info("总数小于或者等于0的书籍信息：",this.stockoutBook)
            total = 0;
          }else{
            console.info("总库存大于0：",total)
            this.noStockoutBook.push(this.books[i]);
            console.info("总数大于0的书籍信息：",this.noStockoutBook)
            total = 0;
          }
        }
      } else {
        console.info(data.desc);
      }
    },
    closeList() {
      this.book = "";
      this.bookList = true;
    },
    evenMoreBookList() {
      console.info("点击显示更多数据，一次显示十条，条件是模糊搜索。");
    },
    entrance(id) {
      console.info(id);
      this.$router.push({
        // path: "/book/:id",
        name: "book",
        params: {
          id: id
        }
      });
    }
  },  

};
</script>

